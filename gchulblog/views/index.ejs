<% include include/header.ejs%>
<div class="container">
    <ul class="media-list">
        <%
        articles.forEach(function(article){
        %>
        <li class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object" src="<%=article.user.avatar%>" alt="">
                </a>
            </div>
            <div class="media-body">                                  <!-- article._id 路径参数-->
                <h4 class="media-heading"><a href="/articles/detail/<%=article._id%>"><%=article.title%></a></h4>
                <p class="media-left"><%- article.content%></p><!--  -能够转义成html代码-->
            </div>
            <div class="media-bottom">
                作者:<%=article.user.username%>
                发表时间:<%=article.createAt.toLocaleString()%>
            </div>
        </li>
        <%
        });
        %>
    </ul>
</div>
<nav>
    <ul class="pagination">
        <%
            //求出总页数
            var total=Math.ceil(count/pageSize);
            for(var i=1;i<=total;i++){
        %>
            <li><a href="/articles/list/<%=i%>/<%=pageSize%>"><%=i%></a></li>
        <%
            }
        %>
    </ul>
</nav>
<% include include/footer.ejs%>

